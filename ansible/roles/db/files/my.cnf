[mysqld]
user = mysql
port = 3306

datadir=/var/lib/mysql
socket=/var/lib/mysql/mysql.sock

symbolic-links=0
sql_mode=NO_ENGINE_SUBSTITUTION,STRICT_TRANS_TABLES

skip-name-resolve
wait_timeout = 600

character-set-server = utf8

